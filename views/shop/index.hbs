{{#each products}}
<div class="row">
  {{#each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src={{this.imagepath}} alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="align-text-center">{{this.description}}</p>
        <div class="clearfix">
          <div class="price pull-left">
            {{this.price}}
          </div>
          <button type="button" class="btn btn-success pull-right"><a href="#" style="color: white;">Add to Shopping</a></button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
